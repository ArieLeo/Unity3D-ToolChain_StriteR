
struct a2fs
{
	A2V_SHADOW_CASTER;
	A2V_SHADOW_DEPTH
	UNITY_VERTEX_INPUT_INSTANCE_ID
};

struct v2fs
{
	V2F_SHADOW_CASTER;
	V2F_SHADOW_DEPTH
	UNITY_VERTEX_INPUT_INSTANCE_ID
};

v2fs ShadowVertex(a2fs v)
{
	v2fs o;
	UNITY_SETUP_INSTANCE_ID(v);
	UNITY_TRANSFER_INSTANCE_ID(v,o);
	SHADOW_CASTER_VERTEX(v,TRANSFER_POSITION_WS(v));
	TRANSFER_SHADOW_DEPTH(v,o)
	return o;
}

float4 ShadowFragment(v2fs i) :SV_TARGET
{
	MIX_SHADOW_DEPTH(i);
	return 0;
}